<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/headerTitleTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/darkGray"
        android:fontFamily="serif"
        android:padding="5dp"
        android:text="@string/head_and_neck"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:background="@android:color/holo_red_light"
        android:backgroundTint="@color/whiteLightGray"
        android:fontFamily="serif"
        android:padding="10dp"
        android:text="@string/area"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/resultAreaTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerTitleTV" />

    <Spinner
        android:id="@+id/resultAreaTV"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:background="@color/whiteLightGray"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/resultRednessTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerTitleTV" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/whiteLightGray"
        android:fontFamily="serif"
        android:padding="10dp"
        android:text="@string/redness"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/resultRednessTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Spinner
        android:id="@+id/resultRednessTV"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginTop="5dp"
        android:background="@color/whiteLightGray"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/resultThicknessTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultAreaTV" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/whiteLightGray"
        android:fontFamily="serif"
        android:padding="10dp"
        android:text="@string/thickness"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/resultThicknessTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Spinner
        android:id="@+id/resultThicknessTV"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginTop="5dp"
        android:background="@color/whiteLightGray"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/resultScaleTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultRednessTV" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/whiteLightGray"
        android:fontFamily="serif"
        android:padding="10dp"
        android:text="@string/scale"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/resultScaleTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Spinner
        android:id="@+id/resultScaleTV"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginTop="5dp"
        android:background="@color/whiteLightGray"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultThicknessTV" />

    <ImageView
        android:id="@+id/pasiImageView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myRef"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/myRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultScaleTV" />


</androidx.constraintlayout.widget.ConstraintLayout>